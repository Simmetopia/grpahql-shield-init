{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist/",
    "sourceRoot": "server/",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "lib": ["esnext"],
    "strict": true
  },
  "exclude": ["node_modules"]
}
